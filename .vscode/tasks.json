{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Debug",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-target",
                "x86_64-unknown-windows-gnu",
                "-fuse-ld=lld",
                "-g",
                {
                    "value": "$($(llvm-config --cxxflags).split())",
                    "quoting": "weak"
                },
                "--std=gnu++17",
                "main.cpp",
                "-o",
                "./bin/main.exe",
                {
                    "value": "$($(llvm-config --ldflags --libs --system-libs core).split())",
                    "quoting": "weak"
                },
                "-lpthread" // For some reason it's absent in --system-libs ðŸ¤”
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}